<script>
    window.onscroll = function () {
        if (document.documentElement.scrollTop + document.body.scrollTop > 100) {
            document.getElementById('scrollto').style.bottom = '20px';
        } else {
            document.getElementById('scrollto').style.bottom = '-100px';
        }
    }
    window.onload = function () {
        document.getElementById('sidebar').addEventListener('click', function () {
            if (document.getElementById('aside').style.transform != 'translateX(0px)') {
                document.body.style.width = 'calc(100% - 320px)';
                document.getElementById('aside').style.transform = 'translateX(0px)';
            } else {
                document.body.style.width = '100%';
                document.getElementById('aside').style.transform = 'translateX(100%)';
            }

        }, false);
        document.getElementById('scrollto').addEventListener('click', function () {
            var timer = setInterval(function () {
                var osTop = document.documentElement.scrollTop || document.body.scrollTop;
                var ispeed = Math.floor(-osTop / 10);
                document.documentElement.scrollTop = document.body.scrollTop = osTop + ispeed;
                if (osTop <= 0) {
                    clearInterval(timer);
                };
            }, 16);
        }, false);
    }
</script>
