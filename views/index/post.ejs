<% include header %>
    <main id="main" class="main">
        <article class="post">
            <header class="post-header">
                <h1 class="post-title">
                    <a class="post-title-link" href="#">
                        <%=data[0] ? data[0].title : '' %>
                    </a>
                </h1>
                <div class="post-meta">
                    <span class="post-time">
                        <i class="post-meta-icon fa fa-calendar-o"></i>
                        <span class="post-meta-item-text">Posted on</span>
                        <time>
                            <%=data[0] ? data[0].created_date.toLocaleString() : '' %>
                        </time>
                    </span>
                    <span class="post-category">
                        <span class="post-meta-divider">|</span>
                        <i class="post-meta-icon fa fa-folder-o"></i>
                        <span class="post-meta-item-text">In</span>
                        <a class="post-meta-item-category" href="#">tutorial</a>
                    </span>
                </div>
            </header>
            <div class="post-content">
                <%-data[0] ? data[0].content : '' %>
            </div>
            <footer class="post-footer"></footer>
        </article>
    </main>
    <% include footer %>